<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
			 xmlns:b="http://www.springframework.org/schema/security"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="http://www.springframework.org/schema/beans
			 http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
			 http://www.springframework.org/schema/security
			 http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	<bean id="customAuthListener" class="com.gamenism.server.auth.CustomAuthListener"/>

	<b:http auto-config="true">
		<b:intercept-url pattern="/gwtspringsecurityproject/**" access="ROLE_USER"/>
		<b:intercept-url pattern="/gwt/**" access="ROLE_USER"/>
		<b:intercept-url pattern="/**/*.html" access="ROLE_USER"/>
		<b:intercept-url pattern="/**" access="IS_AUTHENTICATED_ANONYMOUSLY" />
	</b:http>

	<bean id="customAuthenticationProvider" class="com.gamenism.server.auth.CustomAuthenticationProvider" />

	<b:authentication-manager alias="authenticationManager">
		<b:authentication-provider ref="customAuthenticationProvider"/>
	</b:authentication-manager>

</beans>