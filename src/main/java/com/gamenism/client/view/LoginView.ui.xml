<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:g='urn:import:com.google.gwt.user.client.ui'
			 xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
			 xmlns:m='urn:import:com.gamenism.client.widgets'
		>

	<g:HTMLPanel>
		<b:Row>
			<b:Column size="6">
				<b:Form addStyleNames="form-signin">
					<g:HTMLPanel>
						<h2 class="form-signin-heading pull-left">Please sign in</h2>
					</g:HTMLPanel>
					<m:LoginForm ui:field="loginForm"/>
					<b:Button ui:field="signInButton" size="LARGE" type="SUCCESS">Sign in</b:Button>
					<b:Button ui:field="signUpButton" size="LARGE" type="PRIMARY">Sign up</b:Button>
				</b:Form>
			</b:Column>
		</b:Row>
	</g:HTMLPanel>
</ui:UiBinder>